<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<!-- Empty suppressions file: copy it into gradle/config/checkstyle and specify required suppressions
     (https://checkstyle.sourceforge.io/config_filters.html#SuppressionFilter)-->
<suppressions>
    <!-- Spring Boot application class is not a real utility class -->
    <suppress checks="HideUtilityClassConstructor" files="Application.java" />

    <!-- Suppress Javadoc requirements for common framework classes -->
    <suppress checks="MissingJavadocMethod" files=".*Controller.java" />
    <suppress checks="MissingJavadocMethod" files=".*Mapper.java" />
    <suppress checks="MissingJavadocMethod" files=".*Repository.java" />
</suppressions>
